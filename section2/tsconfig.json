{
    "compilerOptions": {
        "target": "ESNext", // 만들어지는 JS 버전 설정(ESNext: 최신 버전)
        "module": "ESNext", // JS의 모듈 시스템 설정
        "outDir": "dist", // 컴파일 결과가 생성될 곳
        "strict": false, // 얼마나 엄격하게 타입 체크할 지
        "moduleDetection": "force", // 각 파일을 어떤 모듈로 감지할 지
        "skipLibCheck": true //  타입 정의 파일의 타입 검사를 생략하는 옵션
    },
    "include": ["src"] // 컴파일 할 타입스크립트 파일의 범위와 위치
}
